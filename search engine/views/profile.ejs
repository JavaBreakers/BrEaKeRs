
<% include cores/header.ejs %>

<div class="row">
    <div class="col-md-12">
        <div class="container top space">
            <div class="row">
                <div class="col-sm-12 col-md-12 user-details">
                    <div class="user-image topspace">
                        <img src="images/users/profile.jpg"  class="img-circle">
                    </div>
                    <div class="user-info-block">
                        <div class="user-heading">
                            <h3>User Name</h3>
                            <span class="help-block">User Profile info Here</span>
                        </div>

                        <ul class="navigation userprofiletab" style="background:lightgray; border:1px solid;">
                            <li class="active">
                                <a data-toggle="tab" href="/profile">
                                    <span class="glyphicon glyphicon-user"></span>
                                    User Information
                                </a>
                            </li>
                            <li >
                                <a data-toggle="tab" href="/settings">
                                    <span class="glyphicon glyphicon-cog"></span>
                                    Settings
                                </a>
                            </li>
                            <li>
                                <a data-toggle="tab" href="/inbox">
                                    <span class="glyphicon glyphicon-envelope"></span>
                                    Messages
                                </a>
                            </li>
                            <li>
                                <a data-toggle="tab" href="/orderhistory">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                    Orders History
                                </a>
                            </li>
                        </ul>


                        <div class="user-body">
                            <div class="tab-content">
                                <div id="information" class="tab-pane active">
                                    <h4>Account Information</h4>
                                    <div class="col-md-12">
                                        <form action="/updateprofile" method="post">



                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="email">User Name:</label>
                                                    <input type="text" autocomplete="off" value="<%=rows[0].user_name%>" class="form-control" id="name" name="name">
                                                </div>
                                                <div class="form-group">
                                                    <label for="pwd">EMail:</label>
                                                    <input type="email" autocomplete="off" value="<%=rows[0].user_email%>" class="form-control" id="email" name="email">
                                                </div>
                                                <div class="form-group">
                                                    <label for="pwd">Address:</label>
                                                    <input type="text" value="<%=rows[0].user_address%>" class="form-control" id="address" name="address">
                                                </div>
                                                <div class="form-group">
                                                    <label for="pwd">Phone:</label>
                                                    <input type="text" value="<%=rows[0].user_phone%>" class="form-control" id="phone" name="phone">
                                                </div>
                                            </div>
                                            <div class="col-md-6">

                                                <div class="form-group">
                                                    <label for="pwd">User Type:</label>
                                                    <input type="text" class="form-control" id="type" value="<%=rows[0].user_type%>" name="type">
                                                </div>
                                                <button type="submit" class="btn btn-default">Submit</button>
                                            </div>

                                        </form>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<% include cores/footer.ejs %>
