    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>

    <% include cores/header.ejs %>


    <style>
        .box{border: 1px solid #000;
            border-radius: 6px;
            float: left;
            height: 250px;
            margin: 19px 17px;
            overflow: hidden;
            width: 250px;}
        .box .overlay{width:300px; height:250px; background:#fff; margin:-250px 0px 0px 0px; opacity:0.5; }
        .box a{padding:5px 7px; border:1px solid #000; text-decoration:none; font-family:sans-serif; font-size:14px; margin:-140px 0px 0px 15px; display:inline-block; opacity:0; transition:all 0.5s ease-in-out;    cursor: pointer;/* z-index: 10000; */position: absolute;}

        .box .overlay:hover{opacity:0.1; transition:all 0.5s ease-in-out; width:300px; margin-left:50px; float:right; }
        .box:hover{box-shadow:0px 0px 10px #6A6A6A; border:1px solid #00DFDF;transition:all 0.5s ease-in-out;}
        .box:hover a{opacity:1; background:#FFFFFF; color:#000000; margin:-40px 0px 0px 15px;  border-radius:1px; }
        .box a:hover{border:1px solid #00DFDF;transition:all 0.5s ease-in-out;   }
    </style>


    <div class="container">
        <div class="main">

            <h2 style="margin-left: 15px"><%= urlsdata[0].c_cat_name %></h2>

            <div class="col-lg-10 col-md-offset-1 topspace" style="margin-left: 0px; width: 1120px">
                    <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item"><a href="#"> <%= urlsdata[0].p_cat_name %> </a></li>
                    <li class="breadcrumb-item active"> <%= urlsdata[0].c_cat_name %> </li>
                    </ol>
            </div>

            <%
                var myStart = (parseInt(pageNumber)-1)*4;
                var myEnd = parseInt(myStart)+3;

                console.log(myStart);
                console.log(myEnd);

                var myNextPage =  parseInt(pageNumber)+1;
                var myPreviousPage = parseInt(pageNumber)-1;

                myNextPage = myNextPage.toString();
                myNextPage = myNextPage.concat(",");
                var str2 = myData[0].products_catagory;
                myNextPage = myNextPage.concat(str2);

                myPreviousPage = myPreviousPage.toString();
                myPreviousPage = myPreviousPage.concat(",");
                myPreviousPage = myPreviousPage.concat(str2);

            %>




            <% for(var i=myStart; i <= myEnd; i++)
            {
                if(i <= (myData.length-1))
                {
            %>

            <div class="box">
                <img src=  '<%=  myData[i].image_link %>'  width="255" height="250" />
                <div class="overlay">
                </div>
                <a href='/productDetails/<%= myData[i].products_id %>'><%= myData[i].products_name %></a>
            </div>

            <%}}%>



            <br><br><br><br><br><br><br><br><br><br><br><br><br><br><br>
            <br><br><br><br><br>

            <form action="/realProductsCateg" method="post" style="margin-left: 425px; display: inline">
                <input type="hidden" name="pageNumber" value=<%= myPreviousPage %> >
                <input type="submit" value="Previous Page">
            </form>

            <form action="/realProductsCateg" method="post" style="margin-left: 30px; display: inline">
                <input type="hidden" name="pageNumber" value=<%= myNextPage %> >
                <input type="submit" value="  Next Page   ">
            </form>








            <br><br><br>
        </div>
    </div>
